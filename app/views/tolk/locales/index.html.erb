<% content_for :locale do %><span class="locale empty"></span>
<% end %>
<% content_for :app_name do %><span class="app"><%= link_to @application.name, tolk_application_locales_path(@application) %></span>
<% end %>

<h2>Locales <span>Primary locale is <%= Tolk::Locale.primary_locale.language_name %></span></h2>
<% if @locales.any? %>
  <ul class="locales clearfix">
    <% @locales.each do |locale| %>
      <li>
        <%= link_to locale.language_name, tolk_application_locale_path(@application,locale) %>
        <% missing_count = locale.count_phrases_without_translation_for_app(@application) %>
        <% if missing_count > 0 %>
          <span class="missing_translations"><%= locale.count_phrases_without_translation %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
  
<% else %>
  <p>No locales yet.</p>

<% end %>
<%= form_for(Tolk::Locale.new) do |f| %>
  
  <div class="submit">
    <%= hidden_field_tag :application_id, @application.id %>
  <%= f.error_messages %>
  <p>
    <%= f.label "Add a new Locale" %>
    <%= hidden_field_tag :"tolk_locale[application_id]", @application.id %>
    <select id="select_tolk_locale_name" name="tolk_locale[name]">
      <%= options_for_select tolk_locale_selection %>
    </select>
    <%= f.submit 'Add' %>
  </p>
</div>
<% end %>


